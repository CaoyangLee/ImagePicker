<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weimu.imagepicker">

    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".ui.ImageSelectorActivity"
            android:theme="@style/BasePageTheme" />
        <activity
            android:name=".ui.preview.ImagePreviewActivity"
            android:theme="@style/BasePageTheme" />
        <activity
            android:name=".ui.ImageCropActivity"
            android:theme="@style/BasePageTheme" />
        <activity
            android:name=".ui.CameraSelectorActivity"
            android:theme="@style/BasePageTheme" />

        <activity
            android:name=".ui.preview2.ImagePreviewActivity"
            android:theme="@style/ImagePreviewTheme" />
    </application>

</manifest>